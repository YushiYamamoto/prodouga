---
import { HeroSlider3 } from "@static/images";
import Layout from "../layouts/Layout.astro";
import { Hero } from "@modules/Hero";
import { Footer } from "@modules/Footer";
---

<Layout
    title="お問い合わせありがとうございます"
    description="株式会社プロドウガのお問い合わせありがとうございます"
>
    <main class="page-content">
        <Hero
            heroType="ParallaxImage"
            client:load
            data={{
                image: HeroSlider3.src,
                content: {
                    title: "THANK YOU",
                    paragraph:
                        "お問い合わせいただきありがとうございます。担当者よりご連絡いたします。",
                },
            }}
        />
        <section class="thank-you-message">
            <div class="container">
                <h2>お問い合わせありがとうございます</h2>
                <p>
                    お問い合わせ内容を受け付けました。
                </p>
                <p>
                    担当者よりご連絡いたしますので、しばらくお待ちください。
                </p>
                <a href="/" class="btn">ホームページに戻る</a>
            </div>
        </section>
    </main>
    <Footer />
</Layout>

<style>
.thank-you-message {
    text-align: center;
    padding: 50px 20px;
}
.thank-you-message .container {
    max-width: 800px;
    margin: 0 auto;
}
.thank-you-message h2 {
    font-size: 2.5rem;
    margin-bottom: 20px;
}
.thank-you-message p {
    font-size: 1.25rem;
    margin-bottom: 30px;
}
.thank-you-message .btn {
    display: inline-block;
    padding: 10px 20px;
    font-size: 1.25rem;
    color: #fff;
    background-color: #ffa500; /* 控えめのオレンジ色 */
    text-decoration: none;
    border-radius: 5px;
}

.thank-you-message .btn:hover {
    background-color: #ff8c00; /* 少し濃いオレンジ色 */
}

</style>
